.main-container
    .text(ng-show="vm.asd") text
    .main-container__filters
        //При нажатии на филтер посылается запрос через метод vm.getTasks(responsible,creator,favourite,urgent)
            и судя по значениям(true,false) выдает массив tasks по которому прохожусь ng-repeatom
        a.main-container__filters__filter(ng-class=("{'active_filter':vm.active_filter==0}") ng-click="vm.getTasks()") Все
        a.main-container__filters__filter(ng-class=("{'active_filter':vm.active_filter==1}") ng-click="vm.getTasks(1,true,false,false,false)") Входящие
        a.main-container__filters__filter(ng-class=("{'active_filter':vm.active_filter==2}") ng-click="vm.getTasks(2,false,true,false,false)") Исходящие
        a.main-container__filters__filter(ng-class=("{'active_filter':vm.active_filter==3}") ng-click="vm.getTasks(3,true,true,true,false)") Избранные
        a.main-container__filters__filter(ng-class=("{'active_filter':vm.active_filter==4}") ng-click="vm.getTasks(4,true,true,false,true)") Горящие
    table.tasks(ng-show="vm.tasks.length")
        th.task__th Задача
        th.task__th Дедлайн
        th.task__th Ответственный
        th.task__th Постановщик
        th.task__th  Избранные
            //Если не посещен таск, то добавляется класс not-visited и span.circle будет розового цвета
            tr.task(ng-repeat="task in vm.tasks")
                td.task__td(style="width:20%" ui-sref="taskInfo({taskId:task._id})" ng-class="{'not-visited':!task.visited}")
                    h4.task__td__name(ng-class="{'not-visited':!(task.visited.indexOf(vm._id)>-1)}")  {{task.name}}
                    span.task__td__circle(ng-class="{'circle-active':!(task.visited.indexOf(vm._id)>-1)}")
                td.task__td
                    span.deadline(ng-class="{'not-visited':!(task.visited.indexOf(vm._id)>-1)}"){{task.deadline}}{{vm.hello}}

                td.task__td
                    span.responsible(ng-class="{'not-visited':!(task.visited.indexOf(vm._id)>-1)}"){{task.responsible.name}}

                td.task__td
                    span.creator(ng-class="{'not-visited':!(task.visited.indexOf(vm._id)>-1)}"){{task.creator.name}}

                //при нажатии на звезду вызывается метод addtoFavourites
                td.task__td.task__star(ng-class="{'star-active':(task.favourite.indexOf(vm._id)>-1)}" ng-click="vm.addToFavourites(task)")  &#9733;
                    md-tooltip.task__td__hint(md-direction="bottom") Добавить в избранные

